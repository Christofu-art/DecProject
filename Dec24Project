//global variables: can be seen and used by all functions in the program!
string inventory[8];
int PlayerHealth = 150;


int main() {
	srand(time(NULL));
	int room = 1;
	inventory[0] = "mystic whip";
	inventory[1] = "sword";
	inventory[2] = "armor";
	string input;
	while (PlayerHealth > 0 && (input != "quit")) { //game loop!
		
		cout << endl << "-------------------------------------------" << endl;
		cout << "your iventoy: | ";
		for (int i = 0; i < 5; i++)
			cout << inventory[i] << " | ";
		
		cout << endl;
		
		switch (room) {
		case 1:
			BattleSys();
			cout << "you're in the graveyard, you can go north" << endl;
			
			cin >> input;
			if (input == "north" || input == "go north")
				room = 2;
			break;
		case 2:
			
			cout << "you're in room 2, you can go south, north, west, or east" << endl;
			cin >> input;
			if (input == "south" || input == "go south")
				room = 1;
			else if (input == "west" || input == "go west")
				room = 3;
			else if (input == "east" || input == "go east")
				room = 4;
			else if (input == "north" || input == "go north")
				if (inventory[2] == "key") {
				cout << "you unlock the door with the key" << endl;
				inventory[2] = ""; //erases key form inventory
				room = 9;
			}
			else {
				cout << "Door is locked; Key item require to enter" << endl;
			}
			break;
		case 3:
			BattleSys();
			cout << "you're in room 3, you can go west" << endl;
			cin >> input;
			if (input == "west" || input == "go west")
				room = 5;
			else if (input == "east" || input == "go east")
				room = 2;
			break;
		case 4:
			cout << "You are in room 4, you can go east or west" << endl;
			cin >> input;
			if (input == "east" || input == "go east")
				room = 6;
			if (input == "west" || input == "go west")
				room = 2;
			break;
		case 5:
			cout << "You are in room 5, you can only go east" << endl;
			cin >> input;
			if (input == "east" || input == "go east")
				room = 3;
			break;
		case 6:
			cout << "you are in the catacombs, west is the only direction available" << endl;
			cin >> input;
			if (input == "west" || input == "go west")
				room = 4;
			break;
		case 7:
			BattleSys();
			cout << "you are in room 9, you can go west or east" << endl;
			cin >> input;
			if (input == "west" || input == "go west")
				room = 10;
			if (input == "east" || input == "go east")
				room = 8;
			break;
		case 8:
			cout << "you are in room 8, you can go north, west, or east" << endl;
			cin >> input;
			if (input == "north" || input == "go north")
				room = 12;
			if (input == "west" || input == "go west")
				room = 9;
			if (input == "east" || input == "go east")
				room = 7;
			break;
		case 9:
			cout << "you are in room 7, you can go west or east" << endl;
			cin >> input;
			if (input == "west" || input == "go west")
				room = 9;
			if (input == "death" || input == "DEATH")
				room = 16;
			break;
		case 10:
			cout << "you are in room 10, you can go west or east" << endl;
			cin >> input;
			if (input == "north" || input == "go north")
				room = 11;
			if (input == "east" || input == "go east")
				room = 9;
			break;
		case 11:
			BattleSys();
			cout << "you are in room 11, you can go north or west" << endl;
			cin >> input;
			if (input == "west" || input == "go west")
				room = 13;
			if (input == "north" || input == "go norht")
				room = 15;
			break;
		case 12:
			cout << "you are in room 12, you can go north" << endl;
			cin >> input;
			if (input == "north" || input == "go north")
				room = 14;
			break;
		case 13:
			cout << "you are in room 13, you can go east" << endl;
			cin >> input;
			if (input == "east" || input == "go east")
				room = 11;
			if (inventory[6] == "key") {
				cout << "you unlock the chest" << endl;
				cout << "You have obtained The Morning Star; The whip that will destroy all who are related to the kindred of the night." << endl;
				inventory[0] = "Morning Star"; //erases inventory
			}
			break;
		case 14:
			cout << "you are in room 14, you can go south" << endl;
			cin >> input;
			if (input == "south" || input == "go south")
				room = 12;
			break;
		case 15:
			FinalFight();
			cout << "Trevor, Sypha, and Alucard enters the vampire lord's study and BEHOLD, they are facing Dracula himself; Now the FINAL begins." << endl;
			//replace with a "you won" statement and then type return 0;
			break;
		case 16:
			SecrectBoss();
			cout << "Trevor, Sypha, and Alucard enters the vampire lord's study and BEHOLD, they are facing Dracula himself" << endl;
			break;
		}

	}//end of game loop


}//end of main

//function definition
void BattleSys() {
	system("color 04");
	int MonsterType = MonsterGen();
	//you could do this again too
	int MonsterHealth = 0; //local variable: only be seen and used by BattleSim
	int MonsterDMG = 0;
	//add another monster health and dmg variable here
	int MonsterHealth2 = 0;
	int MonsterDMG2 = 0;
	int input;
	int num;


	//copy paste all the stuff below and have it calculate for health 2 and dmg 2
	if (MonsterType == 1) {//skeleton
		MonsterHealth = 30;
	}

	if (MonsterType == 2) { //Slogra and Gaibon
		MonsterHealth = 200;
	}

	if (MonsterType == 3) { //gaibon
		MonsterHealth = 200;
	}

	if (MonsterType == 4) { //lesser demon
		MonsterHealth = 145;
	}

	if (MonsterType == 5) { //skeleton
		MonsterHealth = 20;
	}

	if (MonsterType == 6) { //Skeleton Blaze
		MonsterHealth = 100;
	}

	//set the monster"s damage depending on what type
	if (MonsterType == 1) { //skeleton
		MonsterDMG = rand() % 20 + 1;
	}

	if (MonsterType == 2) { //Slogra and Gaibon
		MonsterDMG = rand() % 70 + 5;
	}

	if (MonsterType == 3) { //gaibon
		MonsterDMG = rand() % 65 + 5;
	}

	if (MonsterType == 4) { //Lesser Demon
		MonsterDMG = rand() % 16 + 5;
	}

	if (MonsterType == 5) { //skeleton
		MonsterDMG = rand() % 10 + 1;
	}

	if (MonsterType == 6) { //Skeleton Blaze
		MonsterDMG = rand() % 35 + 10;
	}

	//another stuff for health and dmg
	if (MonsterType == 1) {//skeleton
		MonsterHealth2 = 30;
	}

	if (MonsterType == 2) { //Slogra and Gaibon
		MonsterHealth2 = 200;
	}

	if (MonsterType == 3) { //gaibon
		MonsterHealth2 = 200;
	}

	if (MonsterType == 4) { //lesser demon
		MonsterHealth2 = 145;
