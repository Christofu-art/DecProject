	if (MonsterType == 1) { //skeleton
		MonsterDMG = rand() % 20 + 1;
	}

	if (MonsterType == 2) { //Slogra and Gaibon
		MonsterDMG = rand() % 70 + 5;
	}

	if (MonsterType == 3) { //gaibon
		MonsterDMG = rand() % 65 + 5;
	}

