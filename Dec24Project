	if (MonsterType == 5) { //skeleton
		MonsterHealth2 = 20;
	}

	if (MonsterType == 6) { //Skeleton Blaze
		MonsterHealth2 = 100;
	}

	//set the monster"s damage depending on what type
	if (MonsterType == 1) { //skeleton
		MonsterDMG = rand() % 20 + 1;
	}

	if (MonsterType == 2) { //Slogra and Gaibon
		MonsterDMG = rand() % 70 + 5;
	}

	if (MonsterType == 3) { //gaibon
		MonsterDMG = rand() % 65 + 5;
	}

	if (MonsterType == 4) { //Lesser Demon
		MonsterDMG = rand() % 16 + 5;
	}

	if (MonsterType == 5) { //skeleton
		MonsterDMG = rand() % 10 + 1;
	}

	if (MonsterType == 6) { //Skeleton Blaze
		MonsterDMG = rand() % 35 + 10;
	}

	//2nd monster's damage
	if (MonsterType == 1) { //skeleton
		MonsterDMG2 = rand() % 20 + 1;
	}

	if (MonsterType == 2) { //Slogra and Gaibon
		MonsterDMG2 = rand() % 70 + 5;
	}

	if (MonsterType == 3) { //gaibon
		MonsterDMG2 = rand() % 65 + 5;
	}

	if (MonsterType == 4) { //Lesser Demon
		MonsterDMG2 = rand() % 16 + 5;
	}

	if (MonsterType == 5) { //skeleton
		MonsterDMG2 = rand() % 10 + 1;
	}

	if (MonsterType == 6) { //Skeleton Blaze
		MonsterDMG2 = rand() % 35 + 10;
	}


	cout << endl << endl << "--------------------------BATTLE BEGINS--------------------------" << endl;
	cout << "a Nightcreature attacks!" << endl;
	while (PlayerHealth > 0 && MonsterHealth > 0 && MonsterHealth2 > 0) { //battle loop

		//Monster fight (double this!
		if (inventory[2] == "armor") {
			num = rand() % 7 + 3;
			cout << "your armor absorbs the blow and get hit for " << num << " damage!" << endl;
			PlayerHealth -= num;
		}
		else {
			num = rand() % 15 + 12;
			cout << "the nightcreature attacks you for " << num << " dmg" << endl;
			PlayerHealth -= num;
		}
		if (inventory[2] == "armor") {
			num = rand() % 7 + 3;
			cout << "your armor absorbs the blow and get hit for " << num << " damage!" << endl;
			PlayerHealth -= num;
		}
		else {
			num = rand() % 15 + 12;
			cout << "Another nightcreature attacks you for " << num << " dmg" << endl;
			PlayerHealth -= num;
		}
		//2nd monster attack goes here

		//gets player's choice:
		cout << "press 1 to attack, 2 to second attack, 3 to drink health potion, 4 to try escape!" << endl;
		cin >> input;

		switch (input) {
		case 1:
			//player attack
			if (inventory[0] == "mystic whip") {
				num = rand() % 25 + 10; //range from 10-24
				cout << "you slash the monsters with your whip for " << num << " damage!" << endl;
				MonsterHealth -= num;
				//repeat the line above for monster 2
			}
			else {
				num = rand() % 16 + 5; //range from 5-15
				cout << "you attack for " << num << " dmg" << endl;
				MonsterHealth -= num;
				//repeat for monster2
			}
			if (inventory[0] == "mystic whip") {
				num = rand() % 25 + 10; //range from 10-20
				cout << "you slash another monster with your whip for " << num << " damage!" << endl;
				MonsterHealth2 -= num;

			}
			else {
				num = rand() % 16 + 5; //range from 2-7
				cout << "you attack for " << num << " dmg" << endl;
				MonsterHealth2 -= num;

			}
			break;
		case 2:
			//player attack
			if (inventory[2] == "sword") {
				num = rand() % 26 + 5; //range from 5-25
				cout << "you slash the monsters with your sword for " << num << " damage!" << endl;
				MonsterHealth -= num;
				//repeat the line above for monster 2
			}
			else {
				num = rand() % 26 + 5; //range from 2-7
				cout << "you attack for " << num << " dmg" << endl;
				MonsterHealth -= num;
				//repeat for monster2
			}
			if (inventory[2] == "sword") {
				num = rand() % 26 + 10; //range from 10-20
				cout << "you slash the monsters with your sword for " << num << " damage!" << endl;
				MonsterHealth2 -= num;

			}
			else {
				num = rand() % 26 + 5; //range from 2-7
				cout << "you attack for " << num << " dmg" << endl;
				MonsterHealth2 -= num;

			}
			break;
		case 3: //health
			if (inventory[3] == "potion") {
				cout << "jug jug!" << endl;
				PlayerHealth += 50;
				inventory[3] = " "; //erase the potion
			}
			else cout << "sorry you don't have any potions" << endl;

			break;
		case 4://escape
			num = rand() % 100;
			if (num > 75) {//25% chance of escaping
				cout << "you successfully run away!" << endl;
				MonsterHealth = 0;
				MonsterHealth2 = 0;

			}
			else cout << "you are connered and can't escape!" << endl;
			break;
		default:
			cout << "srry not an option" << endl;
		}

		cout << "your health:" << PlayerHealth << endl;
		cout << "monster's health:" << MonsterHealth << endl;
		cout << "2nd monster's health:" << MonsterHealth2 << endl;
		//monster 2 health here

	}//end of battle loop
	if (PlayerHealth > 0)
		cout << "you won!" << endl;
	else
		cout << "Chat, you DIED; Is this real" << endl;
	cout << "--------------------------THE BATTLE END--------------------------" << endl << endl;
}

int MonsterGen() {
	int num = rand() % 100; // creates a number from 0-99
	if (num < 15) {//15% chance
		cout << "a skeleton spawned!" << endl;
		return 1;
	}
	else if (num < 20) {//5% chance
		cout << "a Slogra and Gaibon has spotted you." << endl;
		return 2;
	}

	else if (num < 50) {//30%
		cout << "a Gaibon flies around you" << endl;
		cout << "it lunges at you." << endl;
		return 3;
	}
	else if (num < 75) {//25% chance
		cout << "Lesser Demon." << endl;
		cout << "it slams the floor infront of you." << endl;
		return 4;
	}
	else if (num < 100) {//25% chance
		cout << "spooky scary skeletons" << endl;
		return 5;
	}
	else if (num < 5) {//10% chance
		cout << "Skeleton Blaze" << endl;
		return 6;
	}

}

void BossSys() {
	int MonsterHealth = 0; //local variable: only be seen and used by BattleSim
	int MonsterDMG = 0;
	//add another monster health and dmg variable here
	int input;
	int num;
	cout << endl << endl << "--------------------------BOSS BATTLE BEGINS--------------------------" << endl;
	cout << "a Nightcreature attacks!" << endl;
	while (PlayerHealth > 0 && MonsterHealth > 0) { //battle loop

		//Monster fight (double this!
		if (inventory[2] == "armor") {
			num = rand() % 7 + 3;
			cout << "your armor absorbs the blow and get hit for " << num << " damage!" << endl;
			PlayerHealth -= num;
		}
		else {
			num = rand() % 15 + 12;
			cout << "the nightcreature attacks you for " << num << " dmg" << endl;
			PlayerHealth -= num;
		}

		//gets player's choice:
		cout << "press 1 to attack, 2 to second attack, 3 to drink health potion, 4 to try escape!" << endl;
		cin >> input;

		switch (input) {
		case 1:
			//player attack
			if (inventory[0] == "mystic whip") {
				num = rand() % 25 + 10; //range from 10-24
				cout << "you slash the monsters with your whip for " << num << " damage!" << endl;
				MonsterHealth -= num;
				//repeat the line above for monster 2
			}
			else {
				num = rand() % 16 + 5; //range from 5-15
				cout << "you attack for " << num << " dmg" << endl;
				MonsterHealth -= num;
				//repeat for monster2
			}
			break;
		case 2:
			//player attack
			if (inventory[2] == "sword") {
				num = rand() % 26 + 5; //range from 5-25
				cout << "you slash the monsters with your sword for " << num << " damage!" << endl;
				MonsterHealth -= num;
				//repeat the line above for monster 2
			}
			else {
				num = rand() % 26 + 5; //range from 2-7
				cout << "you attack for " << num << " dmg" << endl;
				MonsterHealth -= num;
				//repeat for monster2
			}
			break;
		case 3: //health
			if (inventory[3] == "potion") {
				cout << "jug jug!" << endl;
				PlayerHealth += 50;
				inventory[3] = " "; //erase the potion
			}
			else cout << "sorry you don't have any potions" << endl;

			break;
		case 4://escape
			num = rand() % 100;
			if (num > 75) {//25% chance of escaping
				cout << "you successfully run away!" << endl;
