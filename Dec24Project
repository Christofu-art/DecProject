	}//end of battle loop
	if (PlayerHealth > 0)
		cout << "you won!" << endl;
	else
		cout << "Chat, you DIED; Is this real" << endl;
	cout << "--------------------------THE BATTLE END--------------------------" << endl << endl;
}

